---
interface Props {
  text: string;
  href: string;
  class?: string;
}

const { text, href } = Astro.props;
---

<a
  class:list={[
    "bg-white text-neutral-950 px-4 py-2 rounded-full",
    Astro.props.class,
  ]}
  href={href}
>
  {text}
</a>

<style>
  a {
    box-shadow:
      0 0 0 #5d4a86,
      0 0 0 #1994a2;
    transition: box-shadow 250ms ease-in-out;
  }

  a:hover {
    box-shadow:
      3px 3px 0 #5d4a86,
      6px 6px 0 #1994a2;
  }
</style>
